<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<h2>Add Contact</h2>
			<%= render :partial => 'contacts/form', :locals => {:contact => @contact} %>
			<br>

			<h2> Contacts </h2>
			<ul>
				<% @contacts.each do |contact| %>
				<li><%= link_to contact.name, contact_path(contact.id) %>
					<% end %>
			</ul>
			</div>

			<!-- puts "upcoming reminders" in same row -->
			<div class="col-sm-6">
				<%= render :partial => '/users/reminders', :locals => {:contact => @contact} %>
			</div>
		</div>
