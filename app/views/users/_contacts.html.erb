<div class="panel panel-default contact-panel">
  <!-- Default panel contents -->
  <div class="panel-heading contact-heading"><h2>Contacts</h2></div>

  <!-- List group -->
  <ul class="list-group">
	<% @contacts.each do |contact| %>
    <li class="list-group-item contacts-list"><b><%= link_to ("#{contact.name} (#{contact.company})"), contact_path(contact.id) %></b></li>
    <% end %>
  </ul>
  </div>