<div class="container">
  <div class="row">
    <div class="col-sm-4">

        <!-- <h2> <%=@contact.name%> </h2>

        <%=link_to 'Edit Contact', edit_contact_path %>
        | <%=link_to 'Delete Contact', "/contacts/#{@contact.id}", :method => :delete %> -->

      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading contact-page-person-heading"><h2><%="[#{@contact.name.downcase}]"%> <br> <%= image_tag("networker_logo_thumb2.png")%></h2> 
        </div> <br/>
        <%=link_to 'Edit Contact', edit_contact_path %>
        | <%=link_to 'Delete Contact', "/contacts/#{@contact.id}", :method => :delete %></div>
