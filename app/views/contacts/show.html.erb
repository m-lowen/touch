        <p>Reminders:</p>
        </div> -->

        <!-- List group -->
        <ul class="list-group">
        <li class="list-group-item">Reminders:</li>
        <% @contact.reminders.each do |reminder| %>
        <li class="list-group-item"><%= reminder.date.strftime("%A, %b %e %Y") %></li>
        <% end %>
        </ul>
      </div>
    </div> <!-- closes col-sm-4 -->
    <br> <br> 
  <div class="row">
    <div class="col-sm-6">
      <%= render partial: "emails", locals: {contact: @contact, emails: @emails}  %>
    </div>
    <div class="col-sm-6">
      <%= render partial: "template", locals: {contact: @contact} %>
    </div>
  </div>
</div>

