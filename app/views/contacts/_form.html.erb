<%= form_for(contact, {:url => "/contacts", :html => {:class => 'contact_form'}}) do |f| %>
  <%= f.text_area :name, :placeholder => "Name" %>
  <%= f.text_area :email, :placeholder => "Email" %>
  <%= f.text_area :company, :placeholder => "Company" %>
  <%= f.text_area :notes, :placeholder => "Notes (Optional)" %>
  <%= f.collection_select :reminder, Contact::REMINDERS, :to_s, :to_s, 
       prompt: "When would you like a reminder?" %>
  <br/>
  <%= f.submit %>
<% end %>