<%= form_for(contact, {:url => "/contacts", :html => {:class => 'contact_form'}}) do |f| %>
  <%= f.text_field :name, :placeholder => "Name", class:"form-control" %> <br>
  <%= f.text_field :email, :placeholder => "Email", class:"form-control" %> <br>
  <%= f.text_field :company, :placeholder => "Company", class:"form-control" %> <br>
  <%= f.text_area :notes, :placeholder => "Notes (jot down some interesting tidbits you learned about this contact)", class:"form-control" %> <br>

<div class="row">
  <div class="col-sm-12">
    <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" value="1" name="reminder[]">
      </span>
      <input type="text" class="form-control" value="Remind me in a week" aria-label="..." readonly>
    </div><!-- /input-group -->
    <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" value="2" name="reminder[]">
      </span>
      <input type="text" class="form-control" value="Remind me in a month" aria-label="..." readonly>
    </div><!-- /input-group -->
    <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" value="3" name="reminder[]">
      </span>
      <input type="text" class="form-control" value="Remind me in three months" aria-label="..." readonly>
    </div><!-- /input-group -->
    <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" value="4" name="reminder[]">
      </span>
      <input type="text" class="form-control" value="Remind me in six months" aria-label="..." readonly>
    </div><!-- /input-group -->
  </div>
</div>

