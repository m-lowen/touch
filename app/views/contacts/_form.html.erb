<%= form_for(contact, {:url => "/contacts", :html => {:class => 'contact_form'}}) do |f| %>
  <%= f.text_field :name, :placeholder => "Name", class:"form-control" %> <br>
  <%= f.text_field :email, :placeholder => "Email", class:"form-control" %> <br>
  <%= f.text_field :company, :placeholder => "Company", class:"form-control" %> <br>
  <%= f.text_area :notes, :placeholder => "Notes (jot down some interesting tidbits you learned about this contact)", class:"form-control" %> <br>

